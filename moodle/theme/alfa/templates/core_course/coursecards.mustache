{{!
    @template core_course/coursecards

    This template renders the cards view for the myoverview block.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "coursecategory": "Category 1"
            }
        ]
    }
}}

<style>
    h1{
        color: #8A04A1;
    }
</style>
<div class="container-curso-lista">
    <!--
    <div class="filtros-curso d-flex flex-wrap gap-2 mb-4">
        <input type="text" class="form-control" placeholder="Pesquisar curso" style="max-width: 250px;">
        <select class="form-select" style="max-width: 200px;">
            <option>Selecione a categoria</option>
        </select>
        <select class="form-select" style="max-width: 200px;">
            <option>Selecione um mediador</option>
        </select>
    </div>
    -->
    <div class="card-grid mx-0 row row-cols-1 row-cols-sm-2 row-cols-lg-3" data-region="card-deck" role="list">
        {{#courses}}
            <div class="col d-flex px-0 mb-2">
                {{> core_course/coursecard }}
            </div>
        {{/courses}}
    </div>
</div>


<style>
    .container-curso-lista {
        margin-top: 2rem;
        margin-bottom: 2rem;
    }
</style>

<style>
    .curso-card {
        border-radius: 16px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: box-shadow 0.2s, transform 0.2s;
        &:hover {
            box-shadow: 0 6px 18px rgba(0,0,0,0.12);
            transform: translateY(-4px);
        }
        .card-body {
            padding: 1.25rem;
        }
    }
    .curso-img {
        height: 160px;
        object-fit: cover;
        width: 100%;
    }
    .curso-info .info-item {
        font-size: 0.95rem;
        color: #8A04A1;
    }
    .progress-bar {
        background-color: #8A04A1 !important;
    }
    .autor-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #fff;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.1);
    }
    .curso-autor {
        border-top: 1px solid #eee;
        padding-top: 1rem;
        margin-top: 1rem;
    }
    .titulo-meu-aprendizado {
        color: #8A04A1;
        font-weight: 700;
        font-size: 2.5rem;
    }
    .filtros-curso input,
    .filtros-curso select {
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 1rem;
        padding: 0.5rem 1rem;
        min-width: 250px;
        margin-right: 10px;
    }
</style>

<style>
    /* Esconde o título "Resumo dos cursos" em qualquer bloco */
    .block-myoverview h3.card-title,
    .block-myoverview h3[class*="card-title"],
    .block_myoverview h3.card-title,
    .block_myoverview h3[class*="card-title"] {
        display: none !important;
    }

    /* Esconde a linha horizontal logo abaixo do título */
    .block-myoverview hr,
    .block_myoverview hr {
        display: none !important;
    }

    /* Esconde o bloco de filtros/botões antigos */
    .block-myoverview [role="search"],
    .block_myoverview [role="search"] {
        
    }
</style>
