{{!
    Template para card de curso customizado do tema Alfa
    
    Context variables:
    * course - objeto do curso
    * courseid - ID do curso
    * fullname - nome completo do curso
    * shortname - nome curto do curso
    * summary - resumo do curso
    * courseurl - URL do curso
    * courseimage - URL da imagem do curso
    * instructors - array de instrutores
    * courseinfo - informações adicionais
    * enrolledcount - número de alunos matriculados
    * additionalclasses - classes CSS adicionais
    * categoryname - nome da categoria do curso
}}

<div class="curso-card card {{additionalclasses}}" data-course-id="{{courseid}}" onclick="window.location='{{courseurl}}'" style="cursor:pointer;">
    {{#courseimage}}
    <div class="card-img-top-container">
        <img src="{{courseimage}}" class="curso-img card-img-top" alt="{{fullname}}">
    </div>
    {{/courseimage}}
    


    <div class="card-body" style="margin-top: 0.2em;">
        {{#categoryname}}
            <div class="curso-categoria text-muted" style="font-size: 0.92em; margin-bottom: 0.1em; line-height: 1.1;">
                {{categoryname}}
            </div>
        {{/categoryname}}
        <h5 class="card-title curso-titulo" style="margin-top: 0.2em;">
            {{fullname}}
        </h5>
        
        {{#summary}}
            <div class="card-text curso-resumo" style="margin-bottom:0;">{{{summary}}}</div>
        {{/summary}}
        
        <!-- Informações do curso -->
        <div class="curso-info mb-3">
            {{#courseinfo.duration}}
