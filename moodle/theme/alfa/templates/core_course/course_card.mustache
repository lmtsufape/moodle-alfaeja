                Duração:</span>
                <span class="bold">{{courseinfo.duration}}</span>
            </div>
            {{/courseinfo.duration}}
            
            {{#courseinfo.certificate}}
            <div class="info-item mb-2">
                <i class="fa fa-certificate me-2"style="color: #6861F2;"></i>
                <span>Certificado incluído</span>
            </div>
            {{/courseinfo.certificate}}
        </div>
        <hr class="mb-5 mt-3">

        <!-- Informações do instrutor -->
        {{! Não funciona }}
        {{#instructors}}
        <div class="card-footer curso-autor">
            <div class="d-flex align-items-center">
            <img src="{{avatar}}" class="autor-avatar me-2" alt="{{fullname}}">
            <div>
                <small class="text-muted">Instrutor</small>
                <div class="fw-bold">
                <a href="{{profileurl}}" class="text-decoration-none">{{fullname}}</a>
                </div>
            </div>
            </div>
        </div>
        {{/instructors}}
    </div>
    
</div>
